generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  userName String @unique
  password String
  name     String
  money    Int    @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
